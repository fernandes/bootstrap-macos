#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift File.expand_path('../lib', __dir__)

require 'bootstrap/shell'
require 'bootstrap/step'
require 'bootstrap/runner'
require 'bootstrap/steps/xcode'
require 'bootstrap/steps/homebrew'
require 'bootstrap/steps/display'
require 'bootstrap/steps/modifier_keys'
require 'bootstrap/steps/dock'
require 'bootstrap/steps/finder'
require 'bootstrap/steps/screenshots'
require 'bootstrap/steps/safari'
require 'bootstrap/steps/activity_monitor'
require 'bootstrap/steps/wallpaper'
require 'bootstrap/steps/menu_bar'
require 'bootstrap/steps/sound'
require 'bootstrap/steps/keyboard'
require 'bootstrap/steps/trackpad'
require 'bootstrap/steps/claude_code'

steps = [
  Bootstrap::Steps::Xcode.new,
  Bootstrap::Steps::Homebrew.new,
  Bootstrap::Steps::Display.new,
  Bootstrap::Steps::ModifierKeys.new,
  Bootstrap::Steps::Dock.new,
  Bootstrap::Steps::Finder.new,
  Bootstrap::Steps::Screenshots.new,
  Bootstrap::Steps::Safari.new,
  Bootstrap::Steps::ActivityMonitor.new,
  Bootstrap::Steps::Wallpaper.new,
  Bootstrap::Steps::MenuBar.new,
  Bootstrap::Steps::Sound.new,
  Bootstrap::Steps::Keyboard.new,
  Bootstrap::Steps::Trackpad.new,
  Bootstrap::Steps::ClaudeCode.new
]

runner = Bootstrap::Runner.new(steps: steps)
runner.run!
